<!DOCTYPE html>
<html lang="en">
<head>
    <title>INTPROG Activity 1</title>
    <style>
        /* Add a CSS class for the button */
        .change-color-button {
            background-color: blue;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <header>
        <h1>GROUP 3 MEMBERS</h1>
        <button class="change-color-button">Change Background Color</button>
    </header>

    <script>
        const changeColorButton = document.querySelector('.change-color-button');
        const body = document.body;

        changeColorButton.addEventListener('click', () => {
            body.style.backgroundColor = 'green'; // Change the color to your desired color
        });
    </script>
</body>
</html>
